{
  "extends": [
    "react-app", 
    "plugin:prettier/recommended", 
    "plugin:@typescript-eslint/recommended"
  ],

  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  },
  "parser":  "@typescript-eslint/parser",  

  "parserOptions":  {
    "ecmaVersion":  2018,
    "sourceType":  "module",
    "ecmaFeatures":  {
        "jsx":  true 
    }
  },
  "settings":  {
    "react":  {
      "version":  "detect"
    }
  },
  "plugins": [
    "@typescript-eslint", "react"
  ]
}
